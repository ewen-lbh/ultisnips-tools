[data-tab]:not([data-tab-active])
    display: none

// 
// Headings
// 
h1
    font-weight: normal
    color: var(--prim)

h2
    font-weight: normal
    font-size: 36px
    overflow hidden
h2::after
    content: ''
    display: inline-block
    height: 2px
    background var(--qua)
    position: relative
    vertical-align: middle
    width: 100%
    left: 0.5em
    margin-right: -50%

